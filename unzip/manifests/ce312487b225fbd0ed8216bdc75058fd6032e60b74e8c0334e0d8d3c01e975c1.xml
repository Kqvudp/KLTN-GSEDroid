            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.OnlineBooksActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.OnlineBookActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".activities.OnlineChaptersActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".activities.SearchResultActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.OnlineReaderActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".activities.LocalReaderActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".activities.ReaderSetActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.LocalBooksActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.LocalSearchFilesActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.SubjectActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activities.SubjectsActivity" android:screenOrientation="nosensor" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateAlwaysHidden"/>
